<!DOCTYPE html>
<html>
<head>
    <title>Review Sentiment Analysis</title>
</head>
<body>
    <h1>Review Sentiment Analysis</h1>
    <textarea id="reviewText" placeholder="Enter review text here"></textarea>
    <button onclick="analyzeSentiment()">Analyze</button>
    <div id="results"></div>

    <script>
        async function analyzeSentiment() {
            // Get the review text from the textarea
            var reviewText = document.getElementById("reviewText").value;

            // Check if the review text is not empty
            if (!reviewText.trim()) {
                document.getElementById("results").innerHTML = "Please enter a review.";
                return;
            }

            // Send the review text to the Python script for analysis
            try {
                let response = await fetch('/analyze', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ review: reviewText })
                });

                // Handle the response
                if (response.ok) {
                    let data = await response.json();
                    document.getElementById("results").innerHTML = `Sentiment: ${data.sentiment}`;
                } else {
                    document.getElementById("results").innerHTML = "Error analyzing sentiment.";
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById("results").innerHTML = "An error occurred.";
            }
        }
    </script>
</body>
</html>
